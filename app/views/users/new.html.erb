<h1>Sign up for an account</h1>
  <p>Please fill out the form below</p>

<hr/>

<%= form_for @user do |f| %>

  <div class="span6">
    <%= f.text_field :username, placeholder: "username", class: "input-block-level" %>

    <%= f.text_field :email, placeholder: "email address", class: "input-block-level" %>
    <%= f.password_field :password, placeholder: "password", class: "input-block-level" %>

    <div class="form-actions">
      <%= f.submit 'Create Account', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
